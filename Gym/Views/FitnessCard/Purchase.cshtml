@model ICollection<AllFitnessCardViewModel>
@{
    ViewBag.Title = "My purchased Fitness Cards";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var a in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">@a.Name</h5>
                <img class="card-img-top" src=@a.ImageUrl alt="Fitness Card Image">
                <p class="mb-0"><span class="fw-bold">Description: </span>@a.Description</p>
                <p class="mb-0"><span class="fw-bold">Price: </span>@a.Price BGN</p>
                <p class="mb-0"><span class="fw-bold">Quantity: </span>@a.Quantity </p>

            </div>

        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model IEnumerable<AllFitnessCardViewModel>
@{
    ViewBag.Title = "All fitness card in the gym";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var p in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
                 src="@p.ImageUrl" alt="Book Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@p.FitnessCardCategory</h5>
                <p class="mb-0">Price: @p.Price lv.</p>
                <p class="mb-0">@p.Description</p>

            </div>

            <a asp-controller="FitnessCard" asp-action="Details" asp-route-id="@p.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Details</a>
            @if (User?.Identity?.Name != p.Creator)
            {
                <form class="input-group-sm" asp-controller="FitnessCard" asp-action="Buy" asp-route-id="@p.Id">
                    <input type="submit" value="Buy the fitness card" class="fs-6 btn btn-success mb-3 p-2" />
                </form>
            }
           
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model AllProductViewModel


<div class="col-md-3">
    <div class="card mb-4">



        <img class="card-img-top" src="@Model.ImageUrl" alt="Product Image">
        <div class="card-body text-center">

            <h5 class="card-title mt-1">@Model.Name</h5>
            <p class="mb-0">Quantity: @Model.Quantity</p>
            <p class="mb-0">Price: @Model.Price lv.</p>
            <p class="mb-0">Description: @Model.Description</p>



            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Details</a>

            <form class="input-group-sm" asp-controller="Product" asp-action="AddToCart" asp-route-id="@Model.Id">
                <input type="submit" value="Add Product to cart" class="fs-6 btn btn-success mb-3 p-2" />
            </form>

        </div>

    </div>
</div>





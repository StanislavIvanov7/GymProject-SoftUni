@model DetailsWorkoutPlanViewModel
@{
    ViewBag.Title = "Workout Plan Details";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card w-100">
        <div class="card-body">
            <h3 class="card-title text-center">@Model.Name</h3>
            <img class="card-img-top" style="width: 18rem;"
                 src="@Model.ImageUrl" alt="Book Image">
            <p class="mb-0"><span class="fw-bold">Description: </span>@Model.Description</p>
            <p class="mb-0"><span class="fw-bold">Workout Plan Category: </span>@Model.WorkoutPlanCategory</p>
            <p class="mb-0"><span class="fw-bold">Creator Name: </span>@Model.CreatorName</p>
            <p class="mb-0"><span class="fw-bold">Creator Email: </span>@Model.CreatorEmail</p>
            <p class="mb-0"><span class="fw-bold">Diet Image URL: </span>@Model.ImageUrl</p>
        </div>

        <a asp-controller="WorkoutPlan" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to All Workout plans</a>
       

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
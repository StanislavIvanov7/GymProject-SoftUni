@model ProductFormViewModel
@{
    ViewBag.Title = "Add Product";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Product Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" placeholder="Write product name here..."  />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Product Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5" placeholder="Write product description here..."></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit">Product Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" placeholder="Write product price here..." />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label-add-edit">Product Quantity</label>
                <input asp-for="@Model.Quantity" class="form-control" aria-required="true" placeholder="Write product quantity here..." />
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">Product Image Url</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" placeholder="Write product image url here..." />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ProductCategoryId" class="form-label-add-edit">Category Of Product</label>
                <select asp-for="@Model.ProductCategoryId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Category...</option>
                    @foreach (var category in Model.ProductCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.ProductCategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

